<brls:Box
    width="auto"
    height="auto"
    axis="column"
    grow="1.0"
    paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
    paddingLeft="@style/brls/tab_frame/content_padding_sides"
    paddingRight="@style/brls/tab_frame/content_padding_sides"
    paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0">

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            grow="1.0">

            <brls:Header
                title="Network Utilities"
                marginBottom="20"/>

            <brls:Button
                id="network/checkNatBtn"
                text="Check NAT Type"
                style="primary"
                marginBottom="30"/>

            <brls:Box
                id="network/resultContainer"
                width="auto"
                height="auto"
                axis="column"
                grow="1.0"/>

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
